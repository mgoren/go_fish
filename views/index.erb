<form action="/game" method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="name1" placeholder="Player 1 name" autofocus>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Player 2 name" name="name2">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Player 3 name (optional)" name="name3">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Player 4 name (optional)" name="name4">
  </div>
  <button type="submit" class="btn btn-sm btn-success button-go"><i class="fa fa-user-plus"></i> Go!</button>
</form>
