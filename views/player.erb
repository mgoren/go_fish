<h2> <%= @player.name %>'s Turn!</h2>

<section class="ctr" id="pair">
  <% if @player.check_doubles != nil %>
    <form action="/check_doubles" method="post">
      <button type="submit" class="btn btn-success">Pair!</button>
    </form>
    <% if @success %>
      You got a card! Click above to add your pair to your score, then ask again!
    <% end %>
  <% end %>
</section>

<% if @player.fail_ask %>

<section class="ctr" id="gofish">
   <form action="/go_fish" method="post">
      <button type="submit" class="btn btn-info">GO FISH!</button>
    <br /><br /><br />
    </form>
</section>

<% else %>

<section class="ctr" id="ask">
  <form action="/ask" method="post">
    <select name="card">
      <% @player.cards.alphabetize.each do |card| %>
        <option value="<%= card.fish %>"><%= card.fish %></option>
      <% end %>
    </select>
    <select name="opponent">
      <% @game.players.each do |player| %>
        <% if player != @player %>
          <option value="<%= player.id %>"><%= player.name %></option>
        <% end %>
      <% end %>
    </select><br>
    <button type="submit" class="btn btn-custom">Ask Opponent for a Card</button>
  </form>
</section>

<% end %>

<div class="cards">
  <ul>
    <% @player.cards.alphabetize.each do |card| %>
        <!-- <li><%= card.fish %> <br> <img src="/img/<%= card.fish %>.jpg"></li> -->
        <figure>
          <img src="/img/<%= card.fish %>.jpg">
          <figcaption><%= card.fish %></figcaption>
        </figure>

    <% end %>
  </ul>
</div>
